---
import BaseLayout from "../layouts/BaseLayout.astro";
import LeadBox from "../components/editorial/LeadBox.astro";
import ClusterCard from "../components/ClusterCard.astro";

// Cards
import MagCard from "../components/editorial/MagCard.astro";

// ✅ Mantive como está (depois a gente move pra /journeys/data/hub.ts)
import { hub } from "./comece-aqui.astro";

// SEO
const canonical = Astro.site ? new URL(`/`, Astro.site).toString() : `/`;
const ogImage = hub.heroImage;

// ====== Adaptador leve ======
const featuredRaw = Array.isArray(hub?.featured) ? hub.featured : [];

// ✅ Imagens diferentes (atenção ao espaço no nome do arquivo)
const featuredCardImages = ["/hero/Diagnostico.jpg", "/hero/TDAH_sintomas.png", "/hero/tdah.jpg"];

// ✅ Card destaque grande (split)
const featuredHero = {
  href: featuredRaw?.[0]?.href ?? "/diagnostico",
  kicker: featuredRaw?.[0]?.kicker ?? "CARACTERÍSTICA",
  title: featuredRaw?.[0]?.title ?? "Diagnóstico de TDAH na vida adulta",
  excerpt: featuredRaw?.[0]?.desc ?? "O que ninguém te conta.",
  author: featuredRaw?.[0]?.author ?? "",
  dateLabel: featuredRaw?.[0]?.dateLabel ?? "",
  image: featuredCardImages[0],
  imageAlt: featuredRaw?.[0]?.imageAlt ?? "Imagem de capa",
};

// ✅ até 3 cards (grid) com imagens diferentes
const featuredCards = featuredRaw.slice(1, 4).map((p, idx) => ({
  href: p?.href ?? "#",
  kicker: p?.kicker ?? "CARACTERÍSTICA",
  title: p?.title ?? "Título",
  excerpt: p?.desc ?? "",
  author: p?.author ?? "",
  dateLabel: p?.dateLabel ?? "",
  image: featuredCardImages[idx + 1] ?? p?.image ?? "/og-placeholder.jpg",
  imageAlt: p?.imageAlt ?? "",
  bgImage: p?.bgImage ?? "",
  variant: "green", // mantém "green" e a gente pinta de roxo no CSS
}));

// “More from …”
const moreRaw = Array.isArray(hub?.more) ? hub.more : [];
const moreCards =
  moreRaw.length > 0
    ? moreRaw.map((p, idx) => ({
        href: p?.href ?? "#",
        title: p?.title ?? "Título",
        excerpt: p?.desc ?? "",
        image:
          p?.image ??
          ["/hero/comece-aqui.jpg", "/hero/Diagnostico.jpg", "/hero/TDAH%20sintomas.png", "/hero/tdah.jpg"][
            idx % 4
          ],
        imageAlt: p?.imageAlt ?? "",
        bgImage: p?.bgImage ?? "",
      }))
    : [
        { href: "/buscar", title: "Mais artigos", excerpt: "Veja mais conteúdos e trilhas.", image: "/hero/comece-aqui.jpg" },
        { href: "/ciencia", title: "Ciência aplicada", excerpt: "Evidências e explicações com pé no chão.", image: "/hero/TDAH_sintomas.png" },
        { href: "/estrategias", title: "Estratégias reais", excerpt: "Ferramentas práticas para rotina e foco.", image: "/hero/tdah.jpg" },
        { href: "/regulacao", title: "Regulação", excerpt: "Sono, energia, sensorial e sustentação.", image: "/hero/Diagnostico.jpg" },
      ];
---

<BaseLayout
  title={hub.title}
  description={hub.subtitle}
  canonical={canonical}
  ogImage={ogImage}
  ogType="website"
  hideFooter={true}
>
  <style>
    /* ✅ Header / dropdown não ser cortado (clipping) */
    :global(.site-header),
    :global(.ds-header),
    :global(header[role="banner"]),
    :global(body > header) {
      position: relative;
      z-index: 9999;
      overflow: visible;
    }
    :global(.site-header nav),
    :global(.ds-header nav),
    :global(header[role="banner"] nav),
    :global(body > header nav) {
      overflow: visible;
    }
    :global(#__astro),
    :global(#app),
    :global(.layout),
    :global(.page),
    :global(.site),
    :global(.shell) {
      overflow: visible;
    }

    :root {
      --card-radius-std: 22px;
      --card-bg-std: rgba(45, 27, 78, 0.92);
      --card-bg-std-hover: rgba(55, 30, 95, 0.92);
      --card-border-std: rgba(170, 140, 255, 0.22);
      --card-border-std-hover: rgba(170, 140, 255, 0.62);
      --card-text-std: rgba(246, 243, 255, 0.92);
      --card-muted-std: rgba(246, 243, 255, 0.78);

      --hover-ring: rgba(170, 140, 255, 0.92);
    }

    .hubWrap {
      max-width: 1100px;
      margin: 0 auto;
      padding: clamp(22px, 4vw, 56px) 16px;
      display: flex;
      flex-direction: column;
      gap: clamp(18px, 3vw, 34px);
    }

    .hubNarrow {
      max-width: 980px;
      margin: 0 auto;
      width: 100%;
    }

    .hubMeasure {
      max-width: 72ch;
    }

    .hubSectionTitle {
      font-family: "Playfair Display", serif;
      font-size: clamp(1.6rem, 2.3vw, 2.25rem);
      line-height: 1.12;
      letter-spacing: -0.02em;
      margin: 0 0 14px 0;
      position: relative;
    }
    .hubSectionTitle::after {
      content: "";
      display: block;
      width: 72px;
      height: 2px;
      margin-top: 12px;
      background: var(--color-brand-soft);
      opacity: 0.9;
    }

    /* ✅ Base: cards (paleta roxa) */
    .nature-card {
      border-radius: var(--card-radius-std);
      border: 1px solid var(--card-border-std);
      background: var(--card-bg-std);
      color: var(--card-text-std);

      padding: clamp(18px, 3.2vw, 40px);
      box-shadow: 0 14px 34px rgba(0, 0, 0, 0.18);
      overflow: hidden;
      position: relative;
    }

    .nature-card::before {
      content: "";
      position: absolute;
      inset: 0;
      background:
        radial-gradient(900px 420px at 18% 22%, rgba(221, 214, 255, 0.14), transparent 60%),
        radial-gradient(700px 360px at 78% 18%, rgba(246, 229, 65, 0.06), transparent 62%);
      pointer-events: none;
    }

    .nature-card > * {
      position: relative;
      z-index: 1;
    }

    .hubList {
      margin: 0;
      padding-left: 1.1rem;
      line-height: 1.75;
    }
    .hubList li + li {
      margin-top: 10px;
    }
    .hubList ::marker {
      color: var(--color-brand-soft);
    }

    .hubGrid {
      display: grid;
      gap: 16px;
      grid-template-columns: 1fr;
    }

    @media (min-width: 720px) {
      .hubGrid--clusters {
        grid-template-columns: repeat(2, minmax(0, 1fr));
      }
    }

    @media (min-width: 1024px) {
      .hubGrid--clusters {
        grid-template-columns: repeat(3, minmax(0, 1fr));
      }
    }

    .hubGrid--clusters :global(*),
    .magGrid3 :global(*) {
      min-width: 0;
    }

    /* ✅ CTA: aplicar “nature” só nele (paleta próxima, sem ficar transparente) */
    .hubCTA {
      border: 1px solid rgba(210, 233, 220, 0.18);
      background: linear-gradient(
        180deg,
        rgba(28, 46, 38, 0.92) 0%,
        rgba(20, 34, 29, 0.92) 100%
      );
      color: rgba(248, 250, 249, 0.92);

      display: grid;
      gap: 14px;
      align-items: center;
      text-align: left;
    }

    .hubCTA::before {
      content: "";
      position: absolute;
      inset: 0;
      background:
        radial-gradient(900px 420px at 18% 22%, rgba(180, 230, 200, 0.14), transparent 60%),
        radial-gradient(740px 420px at 76% 20%, rgba(255, 236, 180, 0.06), transparent 62%),
        radial-gradient(900px 520px at 55% 110%, rgba(221, 214, 255, 0.05), transparent 62%);
      pointer-events: none;
      z-index: 0;
    }

    .hubCTA > * {
      position: relative;
      z-index: 1;
    }

    .hubActions {
      display: flex;
      gap: 12px;
      justify-content: flex-start;
      flex-wrap: wrap;
      margin-top: 6px;
    }

    .hubActions a {
      text-decoration: none;
    }

    @media (min-width: 900px) {
      .hubCTA {
        grid-template-columns: 1.3fr 0.7fr;
      }
      .hubCTA .hubActions {
        justify-content: flex-end;
      }
    }

    /* ✅ CTA buttons: mais escuros e consistentes */
    .hubCTA .hubActions {
      margin-top: 0;
      gap: 14px;
    }

    .hubCTA .hubActions a {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      white-space: nowrap;
      min-height: 44px;
      padding: 12px 16px;
      border-radius: 14px;
    }

    .hubCTA .hubActions :global(.ds-btn-primary),
    .hubCTA .hubActions :global(.ds-btn--primary) {
      background: rgba(12, 18, 16, 0.78) !important;
      border-color: rgba(210, 233, 220, 0.18) !important;
      color: rgba(248, 250, 249, 0.96) !important;
      box-shadow: 0 12px 26px rgba(0, 0, 0, 0.28) !important;
    }

    .hubCTA .hubActions :global(.ds-btn-outline),
    .hubCTA .hubActions :global(.ds-btn--outline) {
      background: rgba(12, 18, 16, 0.55) !important;
      border-color: rgba(210, 233, 220, 0.22) !important;
      color: rgba(248, 250, 249, 0.92) !important;
    }

    @media (max-width: 680px) {
      .hubCTA {
        grid-template-columns: 1fr !important;
      }
      .hubCTA .hubActions {
        width: 100%;
        justify-content: flex-start;
        flex-wrap: wrap;
      }
    }

    /* FAQ */
    .faq-item {
      border-bottom: 1px solid var(--color-border);
      padding: 14px 0;
    }

    .hubFaqSummary {
      cursor: pointer;
      font-weight: 650;
      list-style: none;
      outline: none;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
      padding: 6px 0;
    }

    details > summary::-webkit-details-marker {
      display: none;
    }

    .hubFaqSummary::after {
      content: "›";
      opacity: 0.85;
      transform: rotate(90deg);
      transition: transform 0.18s ease;
    }

    details[open] .hubFaqSummary::after {
      transform: rotate(-90deg);
    }

    details:focus-within {
      outline: 2px solid var(--color-brand-soft);
      outline-offset: 6px;
      border-radius: 12px;
    }

    /* ====== BLOCO “Artigos de Destaque” ====== */
    .magWrap {
      display: grid;
      gap: 18px;
      margin-top: 6px;
    }

    .magGrid3 {
      display: grid;
      gap: 18px;
      grid-template-columns: 1fr;
      align-items: stretch;
    }

    @media (min-width: 780px) {
      .magGrid3 {
        grid-template-columns: repeat(3, minmax(0, 1fr));
      }
    }

    .magWrap :global(a) {
      text-decoration: none;
      color: inherit;
    }

    .featureSplit {
      border-radius: 18px;
      overflow: hidden;
      border: 1px solid rgba(170, 140, 255, 0.22);
      background: rgba(45, 27, 78, 0.92);
      box-shadow: 0 14px 34px rgba(0, 0, 0, 0.22);
    }

    .featureLink {
      display: grid;
      grid-template-columns: 1fr;
      color: inherit;
    }

    @media (min-width: 980px) {
      .featureLink {
        grid-template-columns: 1.1fr 0.9fr;
        min-height: 360px;
      }
    }

    .featureText {
      padding: clamp(18px, 3vw, 34px);
      display: grid;
      gap: 12px;
      align-content: start;
      min-width: 0;
    }

    .featureKicker {
      font-weight: 750;
      letter-spacing: 0.12em;
      text-transform: uppercase;
      font-size: 0.78rem;
      opacity: 0.9;
      color: rgba(246, 243, 255, 0.92);
    }

    .featureTitle {
      font-family: "Playfair Display", serif;
      font-size: clamp(1.55rem, 2.4vw, 2.2rem);
      line-height: 1.08;
      margin: 0;
      color: #ffffff;
    }

    .featureExcerpt {
      margin: 0;
      line-height: 1.6;
      opacity: 0.88;
      max-width: 62ch;
      color: rgba(246, 243, 255, 0.82);
    }

    .featureMeta {
      margin-top: 6px;
      font-size: 0.95rem;
      opacity: 0.78;
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
      color: rgba(246, 243, 255, 0.78);
    }

    .featureMedia {
      position: relative;
      min-height: 220px;
      background: rgba(0, 0, 0, 0.12);
    }

    .featureMedia img {
      width: 100%;
      height: 100%;
      display: block;
      object-fit: cover;
      object-position: center;
      filter: saturate(1.02) contrast(1.02);
      transition: transform 0.18s ease;
    }

    .magWrap :global(.magCard img) {
      width: 100%;
      height: 210px;
      object-fit: cover;
      object-position: center;
      display: block;
      transition: transform 0.18s ease;
    }

    .magWrap :global(.magCard--green) {
      background: rgba(45, 27, 78, 0.92) !important;
      border: 1px solid rgba(170, 140, 255, 0.22) !important;
      color: #f6f3ff !important;
      border-radius: 18px;
      overflow: hidden;
      height: 100%;
    }

    .magWrap :global(.magCard--green .ds-muted) {
      color: rgba(246, 243, 255, 0.78) !important;
    }

    /* ====== MORE FROM (Nature lilás + footer dentro) ====== */
    .moreWrap {
      margin-top: 10px;
      background:
        radial-gradient(900px 520px at 18% 12%, rgba(221, 214, 255, 0.14), transparent 60%),
        radial-gradient(820px 520px at 78% 20%, rgba(246, 229, 65, 0.06), transparent 62%),
        linear-gradient(180deg, rgba(26, 22, 41, 0.92) 0%, rgba(18, 15, 29, 0.92) 100%);
      border-top: 1px solid rgba(221, 214, 255, 0.14);
      color: rgba(255, 255, 255, 0.92);
      padding: 34px 0 18px;
    }

    .moreTitle {
      max-width: 1100px;
      margin: 0 auto 18px auto;
      padding: 0 16px;
      font-family: "Playfair Display", serif;
      font-size: clamp(1.6rem, 2.2vw, 2.3rem);
    }

    .moreGrid {
      max-width: 1100px;
      margin: 0 auto;
      padding: 0 16px;
      display: grid;
      grid-template-columns: 1fr;
      border-top: 1px solid rgba(255, 255, 255, 0.12);
    }

    @media (min-width: 800px) {
      .moreGrid {
        grid-template-columns: repeat(4, minmax(0, 1fr));
      }
    }

    .moreCard {
      display: grid;
      grid-template-columns: 96px 1fr;
      gap: 14px;
      align-items: start;
      padding: 16px;
      color: inherit;
      text-decoration: none;
      border-bottom: 1px solid rgba(255, 255, 255, 0.12);
      min-width: 0;
    }

    @media (min-width: 800px) {
      .moreCard {
        border-bottom: none;
        border-left: 1px solid rgba(255, 255, 255, 0.12);
      }
      .moreCard:nth-child(1) {
        border-left: none;
      }
    }

    .moreThumb {
      width: 96px;
      height: 64px;
      border-radius: 10px;
      overflow: hidden;
      background: rgba(255, 255, 255, 0.06);
      flex: 0 0 auto;
    }

    .moreThumb img {
      width: 100%;
      height: 100%;
      display: block;
      object-fit: cover;
      object-position: center;
      filter: saturate(1.02) contrast(1.02);
      transition: transform 0.18s ease;
    }

    .moreCardTitle {
      font-family: "Playfair Display", serif;
      font-size: 1.15rem;
      line-height: 1.15;
      margin: 0 0 6px 0;
      color: #ffffff;
      min-width: 0;
    }

    .moreCardExcerpt {
      margin: 0;
      line-height: 1.45;
      opacity: 0.82;
      color: rgba(255, 255, 255, 0.84);
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      min-width: 0;
    }

    @media (max-width: 420px) {
      .moreCard {
        grid-template-columns: 72px 1fr;
        gap: 12px;
        padding: 14px;
      }
      .moreThumb {
        width: 72px;
        height: 52px;
        border-radius: 10px;
      }
      .moreCardTitle {
        font-size: 1.05rem;
      }
    }

    .moreWrap a,
    .moreWrap a:visited,
    .moreWrap a:hover {
      text-decoration: none;
      color: inherit;
    }

    .moreFooter {
      max-width: 1100px;
      margin: 18px auto 0;
      padding: 14px 16px 0;
      font-size: 0.95rem;
      color: rgba(255, 255, 255, 0.72);
      border-top: 1px solid rgba(221, 214, 255, 0.12);
    }

    /* HOVER */
    :global(.ds-btn),
    .featureSplit,
    .magWrap :global(.magCard--green),
    .moreCard,
    .hubGrid--clusters :global(a),
    .hubGrid--clusters :global(.clusterCard),
    .featureLink {
      transition: transform 0.18s ease, box-shadow 0.18s ease, border-color 0.18s ease,
        filter 0.18s ease, background 0.18s ease, color 0.18s ease;
      will-change: transform;
    }

    :global(.ds-btn:hover) {
      transform: translateY(-1px);
      filter: brightness(1.06) saturate(1.06);
      box-shadow: 0 12px 26px rgba(0, 0, 0, 0.22), 0 0 0 2px var(--hover-ring);
    }
    :global(.ds-btn:active) {
      transform: translateY(0px);
      filter: brightness(0.98);
    }

    :global(.ds-btn-outline:hover),
    :global(.ds-btn--outline:hover) {
      background: rgba(170, 140, 255, 0.14);
      border-color: rgba(170, 140, 255, 0.55);
    }
    :global(.ds-btn-primary:hover),
    :global(.ds-btn--primary:hover) {
      box-shadow: 0 14px 30px rgba(170, 140, 255, 0.22), 0 12px 26px rgba(0, 0, 0, 0.22),
        0 0 0 2px var(--hover-ring);
      filter: brightness(1.05) saturate(1.05);
    }

    .featureSplit:hover,
    .moreCard:hover,
    .hubGrid--clusters :global(a:hover),
    .hubGrid--clusters :global(.clusterCard:hover),
    .featureLink:hover {
      transform: translateY(-3px);
      box-shadow: 0 18px 44px rgba(0, 0, 0, 0.28), 0 10px 30px rgba(170, 140, 255, 0.12),
        0 0 0 2px var(--hover-ring);
      border-color: rgba(170, 140, 255, 0.52);
      background: rgba(55, 30, 95, 0.92);
    }

    .magWrap :global(.magCard--green:hover) {
      transform: translateY(-3px);
      box-shadow: 0 18px 44px rgba(0, 0, 0, 0.28), 0 10px 30px rgba(170, 140, 255, 0.12),
        0 0 0 2px var(--hover-ring) !important;
      border-color: rgba(170, 140, 255, 0.52) !important;
      background: rgba(55, 30, 95, 0.92) !important;
    }

    .moreCard:hover {
      background: rgba(255, 255, 255, 0.04);
      border-color: rgba(170, 140, 255, 0.25);
    }

    .featureSplit:hover .featureMedia img,
    .magWrap :global(.magCard--green:hover img),
    .moreCard:hover .moreThumb img {
      transform: scale(1.02);
    }

    :global(.ds-btn:focus-visible),
    .featureLink:focus-visible,
    .moreCard:focus-visible,
    .hubGrid--clusters :global(a:focus-visible) {
      outline: 2px solid rgba(170, 140, 255, 0.75);
      outline-offset: 4px;
      border-radius: 14px;
    }

    @media (prefers-reduced-motion: reduce) {
      :global(.ds-btn),
      .featureSplit,
      .magWrap :global(.magCard--green),
      .moreCard,
      .hubGrid--clusters :global(a),
      .hubGrid--clusters :global(.clusterCard),
      .featureLink {
        transition: none !important;
        transform: none !important;
      }

      .featureSplit:hover .featureMedia img,
      .magWrap :global(.magCard--green:hover img),
      .moreCard:hover .moreThumb img {
        transform: none !important;
      }
    }
  </style>

  <LeadBox />

  <main id="explore-section" class="hubWrap">
    <section class="nature-card hubNarrow">
      <div class="hubMeasure">
        <h2 class="hubSectionTitle">Para quem é este guia</h2>
        <ul class="hubList">{hub.forWho.map((x) => <li>{x}</li>)}</ul>
      </div>
    </section>

    <section class="nature-card hubNarrow">
      <div class="hubMeasure">
        <h2 class="hubSectionTitle">O que você vai encontrar aqui</h2>
        <ul class="hubList">{hub.whatYouFind.map((x) => <li>{x}</li>)}</ul>
      </div>
    </section>

    <section>
      <h2 class="hubSectionTitle">Clusters</h2>
      <div class="hubGrid hubGrid--clusters">
        {hub.clusters.map((c) => <ClusterCard cluster={c} />)}
      </div>
    </section>

    <section>
      <h2 class="hubSectionTitle">Artigos de Destaque</h2>

      <div class="magWrap">
        <article class="featureSplit">
          <a class="featureLink" href={featuredHero.href}>
            <div class="featureText">
              <div class="featureKicker">{featuredHero.kicker}</div>
              <h3 class="featureTitle">{featuredHero.title}</h3>
              {featuredHero.excerpt ? <p class="featureExcerpt">{featuredHero.excerpt}</p> : null}

              {featuredHero.author || featuredHero.dateLabel ? (
                <div class="featureMeta">
                  {featuredHero.author ? <span>Por {featuredHero.author}</span> : null}
                  {featuredHero.dateLabel ? <span>{featuredHero.dateLabel}</span> : null}
                </div>
              ) : null}
            </div>

            <div class="featureMedia">
              <img src={featuredHero.image} alt={featuredHero.imageAlt} loading="lazy" decoding="async" />
            </div>
          </a>
        </article>

        <div class="magGrid3">
          {featuredCards.map((c) => (
            <MagCard {...c} />
          ))}
        </div>
      </div>
    </section>

    <section class="nature-card hubCTA hubNarrow">
      <div>
        <h2 style="margin: 0 0 8px 0;">{hub.cta.title}</h2>
        <p class="ds-muted" style="margin: 0; line-height: 1.7;">{hub.cta.text}</p>
      </div>

      <div class="hubActions">
        <a class="ds-btn ds-btn-primary" href={hub.cta.primaryHref}>
          {hub.cta.primaryLabel}
        </a>
        <a class="ds-btn ds-btn-outline" href={hub.cta.secondaryHref}>
          {hub.cta.secondaryLabel}
        </a>
      </div>
    </section>

    <section class="nature-card hubNarrow">
      <div class="hubMeasure">
        <h2 class="hubSectionTitle">FAQ</h2>
        <div class="hubFaq">
          {hub.faq.map((f, idx) => (
            <details class="faq-item" open={idx === 0}>
              <summary class="hubFaqSummary">{f.q}</summary>
              <p class="ds-muted" style="margin: 10px 0 0 0; line-height: 1.7;">{f.a}</p>
            </details>
          ))}
        </div>
      </div>
    </section>
  </main>

  <section class="moreWrap" aria-label="Mais conteúdos">
    <h2 class="moreTitle">Mais do VivaTDAH</h2>

    <div class="moreGrid">
      {moreCards.map((c) => (
        <a class="moreCard" href={c.href}>
          <div class="moreThumb">
            <img src={c.image} alt={c.imageAlt ?? ""} loading="lazy" decoding="async" />
          </div>
          <div style="min-width:0;">
            <h3 class="moreCardTitle">{c.title}</h3>
            <p class="moreCardExcerpt">{c.excerpt}</p>
          </div>
        </a>
      ))}
    </div>

    <div class="moreFooter">© {new Date().getFullYear()} VivaTDAH — Todos os direitos reservados</div>
  </section>
</BaseLayout>