---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getPostsByCluster, getAllClusters } from "../../services/api"; // ajuste

export async function getStaticPaths() {
  const clusters = await getAllClusters(); // ['sono','medicacao',...]
  return clusters.map((c) => ({ params: { slug: c } }));
}

const { slug } = Astro.params;

const posts = await getPostsByCluster(slug);
const title = `Cluster: ${slug} | VivaTDAH`;
const description = `Posts do cluster "${slug}".`;
---

<BaseLayout title={title} description={description}>
  <section class="container" style="max-width: 1100px; margin: 0 auto; padding: 28px 18px;">
    <p class="ds-muted" style="margin: 0 0 8px 0;">Cluster</p>
    <h1 style="margin: 0 0 16px 0;">{slug}</h1>

    <div style="display: grid; gap: 12px;">
      {posts?.map((p) => (
        <article class="ds-card">
          <div class="ds-card-body">
            <div class="ds-muted" style="font-size: .9rem; margin-bottom: 6px;">
              {p.pubDate ?? ""}
            </div>
            <h2 style="margin: 0 0 8px 0; font-size: 1.2rem; line-height: 1.2;">
              <a href={`/post/${p.slug}`} style="text-decoration: none;">
                {p.title}
              </a>
            </h2>
            <p class="ds-muted" style="margin: 0;">
              {p.excerpt ?? p.description ?? ""}
            </p>
          </div>
        </article>
      ))}
    </div>

    <div style="margin-top: 18px;">
      <a class="ds-btn ds-btn-outline" href="/posts">Ver todos os posts</a>
    </div>
  </section>
</BaseLayout>