@'
---
type Crumb = { name: string; item: string };
const { items = [] } = Astro.props as { items?: Crumb[] };

const data = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: items.map((c, idx) => ({
    "@type": "ListItem",
    position: idx + 1,
    name: c.name,
    item: c.item
  })),
};
---
{items.length > 0 && (
  <script type="application/ld+json">{JSON.stringify(data)}</script>
)}
'@ | Set-Content -LiteralPath ".\src\components\SchemaBreadcrumbs.astro" -Encoding UTF8