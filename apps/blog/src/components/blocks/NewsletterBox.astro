---
const {
  title = "Receba conteúdos novos",
  text = "Sem spam. Só o que ajuda de verdade.",
  action = "/api/newsletter",
  placeholder = "Seu e-mail",
  buttonLabel = "Quero receber",
} = Astro.props as {
  title?: string
  text?: string
  action?: string
  placeholder?: string
  buttonLabel?: string
}
---
<section class="ds-card" style="padding:18px;">
  <h3 style="margin:0 0 8px 0;">{title}</h3>
  <p class="ds-muted" style="margin:0 0 14px 0;line-height:1.7;">{text}</p>
  <form action={action} method="post" style="display:flex;gap:10px;flex-wrap:wrap;align-items:center;">
    <input name="email" type="email" required placeholder={placeholder} style="flex:1 1 240px;min-width:220px;padding:12px 12px;border-radius:12px;border:1px solid rgba(221,214,255,.18);background:transparent;color:inherit;" />
    <button class="ds-btn ds-btn-primary" type="submit" style="width:auto;">{buttonLabel}</button>
  </form>
</section>