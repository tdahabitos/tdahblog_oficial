---
const { url, title } = Astro.props as { url: string; title?: string }

const shareUrl = encodeURIComponent(url ?? "")
const shareTitle = encodeURIComponent(title ?? "")

const whatsapp = `https://wa.me/?text=${shareTitle}%20${shareUrl}`
const twitter  = `https://twitter.com/intent/tweet?url=${shareUrl}&text=${shareTitle}`
const linkedin = `https://www.linkedin.com/sharing/share-offsite/?url=${shareUrl}`
---
<section class="ds-card" style="padding:14px;">
  <div style="font-weight:700;margin:0 0 10px 0;">Compartilhar</div>
  <div style="display:flex;gap:10px;flex-wrap:wrap;">
    <a class="ds-btn ds-btn-outline" href={whatsapp} target="_blank" rel="noreferrer" style="width:auto;">WhatsApp</a>
    <a class="ds-btn ds-btn-outline" href={twitter} target="_blank" rel="noreferrer" style="width:auto;">X</a>
    <a class="ds-btn ds-btn-outline" href={linkedin} target="_blank" rel="noreferrer" style="width:auto;">LinkedIn</a>
  </div>
</section>