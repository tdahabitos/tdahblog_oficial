---
const {
  title,
  text,
  primaryLabel,
  primaryHref,
  secondaryLabel,
  secondaryHref,
} = Astro.props as {
  title: string
  text?: string
  primaryLabel: string
  primaryHref: string
  secondaryLabel?: string
  secondaryHref?: string
}
---
<section class="ds-card ds-card--feature" style="padding:18px;">
  <h3 style="margin:0 0 8px 0;">{title}</h3>
  {text && <p class="ds-muted" style="margin:0 0 14px 0;line-height:1.7;">{text}</p>}
  <div style="display:flex;gap:10px;flex-wrap:wrap;">
    <a class="ds-btn ds-btn-primary" href={primaryHref} style="width:auto;">{primaryLabel}</a>
    {secondaryLabel && secondaryHref && (
      <a class="ds-btn ds-btn-outline" href={secondaryHref} style="width:auto;">{secondaryLabel}</a>
    )}
  </div>
</section>