---
/* src/components/editorial/LeadBox.astro */
---
<section class="nature-hero">
  <div class="hero-overlay"></div>
  
  <div class="hero-container">
    <div class="hero-text-content">
<h1 class="nature-title">TDAH</h1>
      <p class="nature-subtitle">
        A busca para compreender e tratar uma condição de saúde mental generalizada e mistificadora.
      </p>
      <p class="publish-date">Publicado em 21 de janeiro de 2026</p>
      
      <div class="hero-actions">
        <button id="scroll-to-start" class="btn-nature-primary btn-large">
          Iniciar
        </button>
      </div>
    </div>
  </div>
</section>

<style>
  .nature-hero {
    position: relative;
    min-height: 80vh; /* Ocupa a maior parte da tela inicial */
    display: flex;
    align-items: center;
    padding: 80px 20px;
    
    /* âœ… CONFIGURAÃ‡ÃƒO DA IMAGEM DE FUNDO */
    background-image: url('/hero/comece-aqui.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    overflow: hidden;
  }

  /* Camada suave para garantir que o texto seja legÃ­vel sobre a imagem */
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, rgba(247, 206, 210, 0.9) 30%, transparent 100%);
    z-index: 1;
  }

  .hero-container {
    position: relative;
    z-index: 2;
    max-width: 1100px;
    margin: 0 auto;
    width: 100%;
  }

  .nature-outlook-badge {
    border: 2px solid #111;
    border-radius: 50%;
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.7rem;
    font-weight: 800;
    text-align: center;
    margin-bottom: 24px;
    line-height: 1.1;
    background: white;
  }

  .nature-title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(4rem, 12vw, 8rem);
    font-weight: 900;
    color: #111;
    line-height: 0.85;
    margin-bottom: 20px;
  }

  .nature-subtitle {
    font-family: 'Playfair Display', serif;
    font-size: 1.6rem;
    line-height: 1.3;
    color: #333;
    max-width: 500px;
    margin-bottom: 12px;
  }

  .publish-date {
    font-size: 1rem;
    color: #555;
    margin-bottom: 40px;
  }

  /* âœ… BOTÃƒO INICIAR MAIOR */
  .btn-nature-primary.btn-large {
    background: #111;
    color: #fff;
    border: none;
    padding: 22px 60px; /* Aumentado */
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    cursor: pointer;
    font-size: 1.2rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
  }

  .btn-nature-primary.btn-large:hover {
    background: #000;
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0,0,0,0.3);
  }

  @media (max-width: 768px) {
    .nature-hero {
      background-position: 70% center; /* Ajusta imagem no mobile */
      text-align: center;
    }
    .hero-overlay {
      background: rgba(247, 206, 210, 0.85);
    }
    .nature-subtitle { margin: 0 auto 30px; }
    .nature-outlook-badge { margin: 0 auto 24px; }
  }
</style>

<script>
  document.getElementById('scroll-to-start')?.addEventListener('click', () => {
    const target = document.getElementById('explore-section');
    target?.scrollIntoView({ behavior: 'smooth' });
  });
</script>


