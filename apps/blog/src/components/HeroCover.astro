---
type Props = {
  badge?: string
  title: string
  dateText?: string
  subtitle?: string
  ctaText?: string
  ctaHref?: string
  imageSrc: string
  imageAlt?: string
}

const {
  badge = "HUB",
  title,
  dateText,
  subtitle,
  ctaText,
  ctaHref,
  imageSrc,
  imageAlt = ""
} = Astro.props
---

<section class="heroCover" aria-label="Capa">
  <div class="heroCover-inner">
    <div class="heroCover-copy">
      {badge && <p class="heroCover-badge">{badge}</p>}
      <h1 class="heroCover-title">{title}</h1>
      {dateText && <p class="heroCover-date">{dateText}</p>}
      {subtitle && <p class="heroCover-subtitle">{subtitle}</p>}

      {ctaText && ctaHref && (
        <a class="heroCover-cta" href={ctaHref}>
          {ctaText} â†’
        </a>
      )}
    </div>

    <div class="heroCover-media" aria-hidden="true">
      <img src={imageSrc} alt={imageAlt} loading="eager" />
    </div>
  </div>
</section>

<style>
  .heroCover{
    background: radial-gradient(1200px 600px at 15% 35%, rgba(110,66,167,.45), transparent 60%),
                linear-gradient(90deg, rgba(77,57,140,.78), rgba(20,20,24,.12) 55%, rgba(35,160,190,.28));
    border-bottom: 1px solid rgba(221,214,255,.16);
  }

  .heroCover-inner{
    max-width: 1200px;
    margin: 0 auto;
    padding: 46px 18px;
    display: grid;
    grid-template-columns: 1.1fr .9fr;
    gap: 28px;
    align-items: center;
  }

  .heroCover-badge{
    letter-spacing: .22em;
    font-weight: 750;
    font-size: .78rem;
    color: rgba(255,255,255,.78);
    margin: 0 0 10px;
    text-transform: uppercase;
  }

  .heroCover-title{
    margin: 0;
    font-size: clamp(2.2rem, 4vw, 3.6rem);
    line-height: 1.02;
    color: rgba(255,255,255,.96);
    letter-spacing: -0.02em;
  }

  .heroCover-date{
    margin: 14px 0 0;
    color: rgba(255,255,255,.70);
    font-size: .95rem;
  }

  .heroCover-subtitle{
    margin: 14px 0 0;
    color: rgba(255,255,255,.88);
    max-width: 58ch;
    font-size: 1.05rem;
    line-height: 1.55;
  }

  .heroCover-cta{
    display: inline-flex;
    align-items: center;
    margin-top: 22px;
    padding: 12px 16px;
    border: 1px solid rgba(221,214,255,.28);
    background: rgba(110,66,167,.22);
    color: rgba(255,255,255,.95);
    text-decoration: none;
    font-weight: 700;
    border-radius: 10px;
  }
  .heroCover-cta:hover{
    border-color: rgba(246,229,65,.55);
    background: rgba(110,66,167,.34);
  }

  .heroCover-media{
    display: flex;
    justify-content: flex-end;
  }

  .heroCover-media img{
    width: min(520px, 100%);
    height: auto;
    border-radius: 16px;
    box-shadow: 0 26px 70px rgba(0,0,0,.38);
    opacity: .95;
  }

  @media (max-width: 860px){
    .heroCover-inner{
      grid-template-columns: 1fr;
      padding: 34px 18px;
    }
    .heroCover-media{
      justify-content: flex-start;
    }
  }
</style>