---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title?: string;
  description?: string;
  cover?: any;

  canonical?: string;
  noindex?: boolean;
}

const { title, description, cover, canonical, noindex = false } = Astro.props as Props;

// tenta achar uma url de imagem
const ogImage =
  (cover && typeof cover === "object" && cover.url) ? cover.url :
  (cover && typeof cover === "string") ? cover :
  undefined;
---

<BaseLayout
  title={title}
  description={description}
  canonical={canonical}
  ogType="article"
  ogImage={ogImage}
  noindex={noindex}
>
  <slot />
</BaseLayout>