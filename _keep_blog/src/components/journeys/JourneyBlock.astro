---
import { getJourney } from "../../journeys/lib/journeyEngine";

const { slug } = Astro.props;
const journey = getJourney(slug);
---

{journey && (
  <section class="ds-card">
    <div class="ds-card-body">
      <h2>{journey.title}</h2>

      {journey.steps.map((step) => (
        <div style="margin-top: 16px;">
          <h3>{step.title}</h3>
          <ul>
            {step.posts.map((post) => (
              <li>
                <a href={`/post/${post}`}>{post.replace(/-/g, " ")}</a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </section>
)}
