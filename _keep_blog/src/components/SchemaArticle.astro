@'
---
const { title, description, url, image, datePublished, dateModified } = Astro.props as {
  title: string
  description?: string
  url: string
  image?: string
  datePublished?: string
  dateModified?: string
}

const data = {
  "@context": "https://schema.org",
  "@type": "Article",
  mainEntityOfPage: url,
  headline: title,
  description: description ?? "",
  image: image ? [image] : undefined,
  datePublished,
  dateModified: dateModified ?? datePublished,
};
---
<script type="application/ld+json">{JSON.stringify(data)}</script>
'@ | Set-Content -LiteralPath ".\src\components\SchemaArticle.astro" -Encoding UTF8